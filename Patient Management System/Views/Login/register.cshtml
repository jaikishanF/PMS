@model Register

@{
    ViewBag.Title = "Patient Registration";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<h1>User Registration</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.FirstName)</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.LastName)</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.DateOfBirth)</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.PhoneNumber)</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.StreetNameAndNumber)</label>
                        <input asp-for="StreetNameAndNumber" class="form-control" />
                        <span asp-validation-for="StreetNameAndNumber" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.City)</label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.PostalCode)</label>
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.Country)</label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.EmergencyDetails.EmergencyName)</label>
                        <input asp-for="EmergencyDetails.EmergencyName" class="form-control" />
                        <span asp-validation-for="EmergencyDetails.EmergencyName" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.EmergencyDetails.PhoneNumber)</label>
                        <input asp-for="EmergencyDetails.PhoneNumber" class="form-control" />
                        <span asp-validation-for="EmergencyDetails.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.InsuranceDetails.Provider)</label>
                        <input asp-for="InsuranceDetails.Provider" class="form-control" />
                        <span asp-validation-for="InsuranceDetails.Provider" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label>@Html.DisplayNameFor(model => model.InsuranceDetails.PolicyNumber)</label>
                        <input asp-for="InsuranceDetails.PolicyNumber" class="form-control" />
                        <span asp-validation-for="InsuranceDetails.PolicyNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>